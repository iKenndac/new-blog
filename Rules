#!/usr/bin/env ruby

# A few helpful tips about the Rules file:
#
# * The string given to #compile and #route are matching patterns for
#   identifiers--not for paths. Therefore, you can’t match on extension.
#
# * The order of rules is important: for each item, only the first matching
#   rule is applied.
#
# * Item identifiers start and end with a slash (e.g. “/about/” for the file
#   “content/about.html”). To select all children, grandchildren, … of an
#   item, use the pattern “/about/*/”; “/about/*” will also select the parent,
#   because “*” matches zero or more characters.

require 'compass'
Compass.add_project_configuration 'compass/config.rb'

passthrough '/pictures/*/**'

compile '/posts/*' do
  filter :kramdown
  filter :colorize_syntax, :default_colorizer => :pygmentsrb
  layout 'post'
end

compile '/styles/*/' do
   filter :sass, Compass.sass_engine_options
end

compile '/fonts/*/' do
  #Skip
end

compile '/keyhole/' do
  #Skip
end

compile '/keyhole/*/**' do
  #Skip
end

compile '/feed/*/' do
  filter :erb
end

compile '/audioblog/*/' do
  filter :erb
end

compile '*' do
  if item[:extension] == 'css'
    # don’t filter stylesheets
  elsif item[:extension] == 'xml'
    # or xml
  elsif item[:extension] == 'md' || item[:extension] == 'markdown'
    filter :kramdown
    layout 'page'
  elsif item.binary?
    # don’t filter binary items
  else
    filter :erb
    layout 'default'
  end
end

route '/posts/*' do
  y,m,d,slug = /([0-9]+)\-([0-9]+)\-([0-9]+)\-([^\/]+)/.match(item.identifier).captures

  "/blog/#{y}/#{m}/#{slug}/index.html"
end

route '/styles/*/' do
   item.identifier.chop + '.css'
end

route '/fonts/*/' do
  item.identifier.chop + '.' + item[:extension]
end

route '/feed/*/' do
  '/atom.xml'
end

route '/audioblog/*/' do
  '/audioblog.xml'
end

route '/keyhole/updates/*/' do
  item.identifier.chop + '.' + item[:extension]
end

route '*' do
  if item[:extension] == 'css'
    # Write item with identifier /foo/ to /foo.css
    item.identifier.chop + '.css'
  elsif item[:extension] == 'xml'
    # Write item with identifier /foo/ to /foo.xml
  item.identifier.chop + '.xml'
  elsif item[:extension] == 'scss'
    # Skip!
  elsif item.binary?
    # Write item with identifier /foo/ to /foo.ext
    item.identifier.chop + '.' + item[:extension]
  else
    # Write item with identifier /foo/ to /foo/index.html
    item.identifier + 'index.html'
  end
end

layout '*', :erb
